service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read for event images
    match /event_images/{userId}/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Add rules for profile images
    match /profile_images/{userId}/{imageId} {
      allow read: if true; // Profile images are generally public
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
